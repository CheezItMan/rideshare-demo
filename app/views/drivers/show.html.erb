<h1><%= @driver.name %></h1>
<h2> Car: <%= @driver.make_and_model %></h2>
<h2>Average Rating: <%= number_with_precision(@driver.average_rating, precision: 2) %></h2>
<%= driver_activate_button(@driver) %>
<section class="trip-list">
  <h2 class="trip-list__header-text">Driven Trips</h2>

  <%= render partial: "shared/trip_list", locals: {trips: @driver.trips.order(:date)} %>
</section>
<p>
  <%= link_to "Edit", edit_driver_path(@driver.id) %>
  <%= link_to "Delete", driver_path(@driver.id), method: :delete %>
</p>
